<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"> 

    <display-name>Prof. Dietje</display-name>

    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>nl.utwente.dietje.CourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>nl.utwente.dietje.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignmentServlet</servlet-name>
        <servlet-class>nl.utwente.dietje.AssignmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackServlet</servlet-name>
        <servlet-class>nl.utwente.dietje.FeedbackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>nl.utwente.dietje.RequestServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/services/courses.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/services/students.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/services/assignments.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackServlet</servlet-name>
        <url-pattern>/services/feedback.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/services/request.json</url-pattern>
    </servlet-mapping>


</web-app>

